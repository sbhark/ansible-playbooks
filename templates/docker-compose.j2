version: '3.3'

services:
  website:
    image: wordpress:5.0.2-php7.2
    volumes:
      - test_data:/var/www/html
    ports:
      - "8080:80"
    restart: always
    environment:
      WORDPRESS_DB_HOST: {{ wordpress_db_host }}
      WORDPRESS_DB_USER: {{ wordpress_db_user }}
      WORDPRESS_DB_NAME: {{ wordpress_db_name }}
      WORDPRESS_DB_PASSWORD: {{ wordpress_db_password }}

volumes:
  test_data:
    external:
      name: {{docker_volume}}
